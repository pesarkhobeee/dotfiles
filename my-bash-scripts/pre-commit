#!/bin/bash

# Get list of staged YAML files
yaml_files=$(git diff --cached --name-only --diff-filter=ACM | grep -E '\.(yaml|yml)$')

if [ -z "$yaml_files" ]; then
    exit 0
fi

echo "Validating Kubernetes YAML files..."

failed=0
for file in $yaml_files; do
    # Skip if file doesn't exist (e.g., was deleted)
    [ -f "$file" ] || continue
    
    # Run kubeconform on the staged version of the file
    git show ":$file" | kubeconform -strict -summary \
        -kubernetes-version 1.33.5 \
        -schema-location default \
        -schema-location 'https://raw.githubusercontent.com/datreeio/CRDs-catalog/main/{{.Group}}/{{.ResourceKind}}_{{.ResourceAPIVersion}}.json'
    
    if [ $? -ne 0 ]; then
        echo "❌ Validation failed: $file"
        failed=1
    else
        echo "✅ Valid: $file"
    fi
done

if [ $failed -ne 0 ]; then
    echo ""
    echo "Commit aborted. Fix the YAML validation errors above."
    exit 1
fi

exit 0
